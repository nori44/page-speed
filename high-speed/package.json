{
  "name": "restaurant-website",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "image": "node convertImages.mjs -i ./src/img -o ./dist/img -m -w -v -z -t",
    "start:server": "browser-sync start -s dist -w dist/*.html dist/css/*.css dist/js/*.js",
    "html:plain": "cpx 'src/html/**/*.html' 'dist/'",
    "html": "npm-run-all html:*",
    "compile:css2cssprefix": "postcss dist/css/style.css -u autoprefixer -o dist/css/style.css",
    "compile:scss2css": "sass src/scss/style.scss:dist/css/style.css --style=compressed --source-map-urls=relative",
    "compile:scss2cssprefix": "run-s compile:scss2css compile:css2cssprefix",
    "js:uglifyjs": "uglifyjs src/js/script.js -o dist/js/script.min.js",
    "js": "npm-run-all -s js:*",
    "watch:html": "chokidar \"src/html\" --command \"npm run html\" --initial",
    "watch:scss2cssprefix": "chokidar \"src/scss/\" --command \"npm run compile:scss2cssprefix\" --initial",
    "watch:img": "node convertImages.mjs -i ./src/img -o ./dist/img -m -w -v -z -t",
    "watch:js": "chokidar \"src/js/**/*\" --command \"npm run js\" --initial",
    "watch:all": "run-p watch:scss2cssprefix watch:img watch:js watch:html start:server"
  },
  "author": "",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "ansi-colors": "^4.1.3",
    "autoprefixer": "^10.4.2",
    "browser-sync": "^2.27.7",
    "chokidar-cli": "^3.0.0",
    "commander": "^13.0.0",
    "cpx": "^1.5.0",
    "fancy-log": "^2.0.0",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "globule": "^1.3.4",
    "npm-run-all": "^4.1.5",
    "path": "^0.12.7",
    "postcss": "^8.4.6",
    "postcss-cli": "^9.1.0",
    "pug-cli": "github:pugjs/pug-cli",
    "sharp": "^0.33.5",
    "uglify-js": "^3.15.4",
    "zlib": "^1.0.5"
  },
  "dependencies": {
    "sass": "^1.49.7",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
